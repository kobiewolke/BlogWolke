@model List<Blog.DTO.ArticleDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    Html.RenderPartial("~/Views/Shared/_Contact.cshtml", new Blog.DTO.ContactDTO());
    int y = 1;
    int x = 2;
    for (int i = 1; i <= Model.Count; i++)
    {
        if (i % 3 == 0 && i != 0)
        {
            if (x % 2 == 0)
            {
                <div class="row" style="text-align:left;">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="float:right">
                        @Html.Partial("_Article", Model[i - 1])
                    </div>
                </div>
            }
            else
            {
                <div class="row" style="text-align:left;">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="float:left">
                        @Html.Partial("_Article", Model[i - 1])
                    </div>
                </div>
            }
            x++;
        }
        else
        {
            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                    @Html.Partial("_Article", Model[i - 1])
                </div>

                @if (i < Model.Count)
                {
                    <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
                        @Html.Partial("_Article", Model[i])
                    </div>
                    i++;
                }
            </div>
        }
    }
}
